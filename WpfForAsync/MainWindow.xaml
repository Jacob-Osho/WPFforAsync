<Window x:Class="WpfForAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfForAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <Button x:Name="normalButtom" Content="Normal Execute" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top" Height="80" Width="800" FontSize="48" Click="normalButtom_Click"/>
        <Button x:Name="asyncButtom" Content="Async Execute" HorizontalAlignment="Center" Margin="0,148,0,0" VerticalAlignment="Top" Height="80" Width="800" FontSize="48" Click="asyncButtom_Click"/>
        <Label x:Name="topLabel" Content="Simple App For Async" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="24" Width="800" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="48"/>
        <TextBlock x:Name="textBlockWindow" HorizontalAlignment="Left" Margin="0,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="197" Width="790"/>

    </Grid>
</Window>
